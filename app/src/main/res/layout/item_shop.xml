<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box_style"
    android:layout_marginBottom="5dp"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shopPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="3sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icon_logo"
        />

    <TextView
        android:id="@+id/shopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shopPic"
        android:text="SHOP NAME"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/color_blue_1"/>
    <TextView
        android:id="@+id/shopAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/shopName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shopPic"
        android:text="SHOP Address"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:lines="4"
        android:textStyle="bold"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/shopPic"
        app:dividerColor="@color/color_blue_1" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/vector_star"
        app:tint="@color/color_orange_1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/star"
        android:layout_margin="10dp"
        android:textColor="@color/color_blue_1"
        android:text="5.0 rate"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelect"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_primary"
        android:text="SELECT"
        android:textColor="@color/white"
        android:textSize="16sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>